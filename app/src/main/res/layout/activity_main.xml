<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <TextView
        android:id="@+id/textViewRightAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_view_inside_padding"
        android:textSize="@dimen/question_params_text_size"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_option3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:text="TextView"
        android:onClick="onClickPlayNext"
        android:textSize="@dimen/text_view_answer_size"
        android:padding="@dimen/text_view_inside_padding"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_option4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:onClick="onClickPlayNext"
        android:text="TextView"
        android:background="@color/purple_700"
        android:textSize="@dimen/text_view_answer_size"
        android:gravity="center"
        android:padding="@dimen/text_view_inside_padding"
        app:layout_constraintBottom_toTopOf="@+id/textView_option3"
        app:layout_constraintEnd_toStartOf="@+id/textView_option2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:gravity="center"
        android:onClick="onClickPlayNext"
        android:padding="@dimen/text_view_inside_padding"
        android:textColor="#546E7A"
        android:textSize="@dimen/text_view_answer_size"
        app:layout_constraintBottom_toTopOf="@+id/textView_option4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_option1"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_option4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:gravity="center"
        android:padding="@dimen/text_view_inside_padding"
        android:onClick="onClickPlayNext"
        android:textColor="#5E35B1"
        android:textSize="@dimen/text_view_answer_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_option3"
        tools:text="TextView" />

    <TextView
        android:id="@+id/textViewTimeLeft"
        android:padding="@dimen/text_view_inside_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/question_params_text_size"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/question_params_text_size"
        android:text="TextView"
        android:padding="@dimen/text_view_inside_padding"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>